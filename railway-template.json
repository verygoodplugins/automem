{
  "name": "AutoMem - Persistent AI Memory",
  "description": "Graph + Vector memory system for AI agents with persistent storage and automatic backups",
  "repository": "https://github.com/verygoodplugins/automem",
  "services": [
    {
      "name": "automem-api",
      "source": {
        "repo": "https://github.com/verygoodplugins/automem",
        "branch": "main"
      },
      "builder": "DOCKERFILE",
      "healthcheck": {
        "path": "/health",
        "timeout": 100
      },
      "env": {
        "PORT": "8001",
        "FALKORDB_HOST": "${{FalkorDB.RAILWAY_PRIVATE_DOMAIN}}",
        "FALKORDB_PORT": "6379",
        "FALKORDB_PASSWORD": "${{FalkorDB.REDIS_PASSWORD}}",
        "AUTOMEM_API_TOKEN": {
          "generator": "secret"
        },
        "ADMIN_API_TOKEN": {
          "generator": "secret"
        },
        "OPENAI_API_KEY": "",
        "QDRANT_URL": "",
        "QDRANT_API_KEY": ""
      }
    },
    {
      "name": "automem-mcp-sse",
      "source": {
        "repo": "https://github.com/verygoodplugins/automem",
        "branch": "main"
      },
      "builder": "NIXPACKS",
      "buildCommand": "cd mcp-sse-server && npm i",
      "startCommand": "node mcp-sse-server/server.js",
      "healthcheck": {
        "path": "/health",
        "timeout": 100
      },
      "env": {
        "PORT": "8080",
        "AUTOMEM_ENDPOINT": "http://${{automem-api.RAILWAY_PRIVATE_DOMAIN}}:8001"
      }
    },
    {
      "name": "FalkorDB",
      "image": "falkordb/falkordb:latest",
      "volumes": [
        {
          "mountPath": "/data",
          "name": "falkordb_data"
        }
      ],
      "env": {
        "REDIS_ARGS": "--save 900 1 --save 300 10 --save 60 10000 --appendonly yes --dir /data",
        "REDIS_PASSWORD": {
          "generator": "secret"
        }
      },
      "healthcheck": {
        "command": "redis-cli -a $REDIS_PASSWORD ping",
        "interval": 30,
        "timeout": 3,
        "retries": 3
      }
    }
  ],
  "databases": [],
  "plugins": []
}
