[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    node_modules,
    tests/benchmarks,
    backups,
    packages/graph-viewer/dist,
    scripts
per-file-ignores =
    app.py:F401,E402,F402,F841,E741
    consolidation.py:E722
    tests/*.py:F401,F841
    scripts/*.py:F401,F541
